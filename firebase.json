{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ],
  "error-pages": [
    {
      "code": 404,
      "path": "./public/ErrorPage.jsx"
    }
  ]
}
